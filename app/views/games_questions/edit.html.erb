<div class="card">
  <div class="card-question card-body">
    <%= form_for @game_question do |f| %>
      <div class="question-title row">
        <div class="col-10">
          <%= @question.title %>
        </div>
        <div class="col-2 text-right">
          <span class="badge badge-info"><%= @question.category %></span>
        </div>
      </div>
    
      <div class="container">
        <% (1..4).each do |i| %>
        <div class="form-check">
          <label class="form-check-label">
            <%= f.radio_button :answer, i %>
            <%= @question.send("option#{i}") %>
          </label>
        </div>
        <% end %>
      </div>

      <div class="text-right">
        <%= f.submit 'Next', class: 'btn btn-success btn-lg disabled', id: 'btn-next-question' %>
      </div>
    <% end %>
  </div>
</div>