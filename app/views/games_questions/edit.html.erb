<div class="card">
  <div class="card-question card-body">
    <%= form_for @game_question do |f| %>
      <div class="question-header">
        <div class="question-title inline">
          <%= @question.title %>
        </div>
        <div class="question-badge inline text-right">
          <span class="badge badge-info"><%= @question.category %></span>
        </div>
      </div>
    
      <div class="questions-container container">
        <% (1..4).each do |i| %>
        <div class="form-check">
          <label class="form-check-label">
            <%= f.radio_button :answer, i %>
            <%= @question.send("option#{i}") %>
          </label>
        </div>
        <% end %>
      </div>

      <div class="text-right">
        <%= f.submit "Next", class: "btn btn-success btn-lg disabled", id: "btn-next-question", disabled: "disabled" %>
      </div>
    <% end %>
  </div>
</div>